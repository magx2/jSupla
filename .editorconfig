[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = false
insert_final_newline = false
indent_style = tab
tab_width = 4

[*.java]
indent_style = space
indent_size = 4

[{messages.*, spring.schemas, spring.handlers, messages, *.properties}]
indent_style = space
indent_size = 4

[{*.kts, *.kt}]
indent_style = space
indent_size = 4

[{*.yml, *.yaml}]
indent_style = space
indent_size = 2

